<header>
    <nav class="bg-white border-gray-200 px-2 lg:px-6 py-2.5 dark:bg-gray-800">
        <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
            <!-- Left Side Logo -->
            <div class="flex items-center">
                <%= link_to root_url, class: "flex items-center" do %>
                    <%= image_tag "brackets.svg", class: "mr-3 h-6 sm:h-9"%>
                    <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Axel Olsson</span>
                <% end %>
            </div>
            
            <div data-controller="dropdown" class="flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                <button type="button" data-action="dropdown#toggle click@window->dropdown#hide">
                <span class="sr-only">Open main menu</span>
                    <svg class="w-6 h-6 fill-black" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                    <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </button>

                <div
                    data-dropdown-target="menu"
                    class="hidden transition transform origin-top-right absolute right-0"
                    data-transition-enter-from="opacity-0 scale-95"
                    data-transition-enter-to="opacity-100 scale-100"
                    data-transition-leave-from="opacity-100 scale-100"
                    data-transition-leave-to="opacity-0 scale-95"
                >   
                    <%= link_to "About", "#", class: "dark:text-blue-500 hover:underline", "data-action" => "dropdown#toggle" %>
                    <%= link_to "Blog", posts_path, class: "dark:text-blue-500 hover:underline", "data-action" => "dropdown#toggle" %>
                </div>
            </div>
                <!--<%= link_to "", disabled: true, "type" => "button", "aria-expanded" => "false", id: "dropdown", class: "inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" do %>
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-6 h-6 fill-black" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                    <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <% end %>
                -->
            <div class="hidden justify-between items-center w-full lg:flex lg:w-auto" id="mobile-menu">
                <ul class="flex flex-col items-end mt-4 font-medium text-lg text-black lg:flex-row lg:space-x-8 lg:mt-0 lg:justify-between">
                    <li>
                        <%= link_to "About", "#", class: "dark:text-blue-500 hover:underline" %>
                    </li>
                    <li>
                        <%= link_to "Blog", posts_path, class: "dark:text-blue-500 hover:underline" %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>