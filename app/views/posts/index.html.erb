<div class="flex-grow w-full flex flex-col justify-center items-center bg-gray-200 p-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice%></p>
  <% end %>

  <div class="flex-grow w-full bg-white flex flex-col items-center p-2 rounded-md dark:bg-gray-300 shadow">
    <h1 class="font-bold text-3xl">Recent Posts</h1>
    <div class="grid grid-cols-2 grid-rows-3 p-4">
      <% @posts.each do |post| %>
        <%= render "post_link", post: post %>
      <% end %> 
    </div>
  </div>
</div>
  
